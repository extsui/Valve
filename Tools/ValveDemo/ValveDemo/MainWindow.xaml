            Width="18"
            Height="108"
            Margin="92,68,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Orientation="Vertical" />
        <Slider
            Width="18"
            Height="108"
            Margin="141,68,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Orientation="Vertical" />
        <Slider
            Width="18"
            Height="108"
            Margin="189,68,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Orientation="Vertical" />
        <oxy:PlotView
            Margin="222,0,0,0"
            Controller="{Binding Controller, ElementName=root}"
            Model="{Binding Model, ElementName=root}" />
    </Grid>
</Window>
